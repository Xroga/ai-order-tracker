<div class="courierdetect-widget">
  <div class="cd-header">
    <div class="cd-icon">
      <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
        <rect width="40" height="40" rx="8" fill="#5c6ac4"/>
        <path d="M15 20L20 15L25 20M20 15V25M13 27H27" stroke="white" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </div>
    <h3 class="cd-title">Track Your Order</h3>
    <p class="cd-description">Enter tracking number to check status</p>
  </div>
  
  <div class="cd-input-group">
    <input type="text" class="cd-input" placeholder="Enter tracking number">
    <button class="cd-button">
      <span class="cd-button-icon">üîç</span>
      <span>Track Package</span>
    </button>
  </div>
  
  <div class="cd-results" id="cd-results"></div>
  
  <div class="cd-footer">
    <small>Powered by <strong>CourierDetect</strong></small>
  </div>
</div>

<script>
// Simple tracking function
document.querySelector('.cd-button').addEventListener('click', function() {
  const input = document.querySelector('.cd-input');
  const results = document.getElementById('cd-results');
  const trackingNumber = input.value.trim();
  
  if (!trackingNumber) {
    results.innerHTML = '<div class="cd-error">Please enter tracking number</div>';
    results.style.display = 'block';
    return;
  }
  
  // Show loading
  results.innerHTML = '<div class="cd-loading">Detecting... ‚è≥</div>';
  results.style.display = 'block';
  
  // Simulate detection
  setTimeout(() => {
    const carriers = ['UPS', 'FedEx', 'DHL', 'USPS'];
    const carrier = carriers[Math.floor(Math.random() * carriers.length)];
    
    results.innerHTML = `
      <div class="cd-success">
        <div class="cd-success-icon">‚úÖ</div>
        <div class="cd-success-content">
          <div class="cd-carrier"><strong>${carrier}</strong></div>
          <div class="cd-tracking">Tracking: <code>${trackingNumber}</code></div>
          <div class="cd-status">Carrier detected!</div>
        </div>
      </div>
    `;
  }, 1000);
});
</script>

